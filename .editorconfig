root = true

[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
indent_style = space
indent_size = 4
max_line_length = 120

[*.md]
trim_trailing_whitespace = false
max_line_length = 240

[*.{yaml,yml,json,js,ts,html,css,toml}]
indent_size = 2

[COMMIT_EDITMSG]
max_line_length = 72
